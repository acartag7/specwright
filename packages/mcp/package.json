{
  "name": "@specwright/mcp",
  "version": "2.0.0",
  "description": "MCP server for Specwright - spec-driven development platform",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client/index.js"
  },
  "bin": {
    "specwright": "dist/index.js"
  },
  "publishConfig": {
    "name": "specwright"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --dir src/__tests__/integration",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mcp",
    "claude",
    "specwright",
    "opencode",
    "ai",
    "spec-driven",
    "model-context-protocol"
  ],
  "author": "Arnold Cartagena",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acartag7/specwright.git"
  },
  "dependencies": {
    "@specwright/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^12.6.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.0",
    "msw": "^2.7.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.1.0"
  }
}
